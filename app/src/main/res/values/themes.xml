<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.HistoryQuiz" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/white</item>
        <item name="colorPrimaryVariant">@color/light_gray</item>
        <item name="colorOnPrimary">@color/dark_gray</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/light_slate_gray</item>
        <item name="colorSecondaryVariant">@color/slate_gray</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
        <item name="backgroundColor">@color/silver</item>
        <item name="colorOnBackground">@color/dark_gray</item>

        <item name="buttonStyle">@style/Widget.HistoryQuiz.Button</item>
        <item name="materialButtonStyle">@style/Widget.HistoryQuiz.Button</item>

        <item name="android:colorBackground">?attr/backgroundColor</item>
        
        <item name="textAppearanceHeadline1">@style/TextAppearance.HistoryQuiz.Headline1</item>
        <item name="textAppearanceHeadline2">@style/TextAppearance.HistoryQuiz.Headline2</item>
        <item name="textAppearanceBody1">@style/TextAppearance.HistoryQuiz.Body1</item>
    </style>
</resources>